<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="css/forms.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <article class="small-form">
            <h1 class="form-title">Enter Character Details</h1>
            <form class="character-form" action="/add-character" method="POST">
                <div class="form-control">
                    <label for="name">Name</label>
                    <input type="text" name="name" id="name">
                </div>
                <div class="form-control">
                    <label for="classType">Class</label>
                    <input type="text" name="classType" id="classType">
                </div>
                <div class="form-control">
                    <label for="imageUrl">Image URL</label>
                    <input type="url" name="imageUrl" id="imageUrl">
                </div>
                <div class="form-control">
                    <label for="level">Level</label>
                    <input type="number" name="level" id="level">
                </div>
                <!-- <div class="form-control">
                    <label for="description">Description</label>
                    <textarea name="description" id="description" rows="5"></textarea>
                </div> -->

                <button class="btn" type="submit">Add Product</button>
            </form>
        </article>
    </main>
    <%- include('../includes/end.ejs') %>