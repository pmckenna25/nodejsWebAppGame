extends layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/forms.css")
block content
    main
        form.character-form(action="/add-character", method="POST")
            .form-control
                label(for="name") Character Name
                input(type="text", name="name")#name
            .form-control
                label(for="class") Character Class
                input(type="text", name="class")#class
            .form-control
                label(for="image") Image
                input(type="url", name="image")#image
            .form-control
                label(for="level") Level
                input(type="text", name="level")#level
            button.btn(type="submit") Create Character